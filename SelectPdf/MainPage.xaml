<Page
    x:Class="SelectPdf.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SelectPdf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="xBackground" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button Content="Load File" Click="Load_Button_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30"></Button>
        <Button Content="Selections" Click="Selection_Button_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30,10,30,80"></Button>
        <Grid x:Name="pdfContainer">
            <Canvas x:Name="pdfCanvas"></Canvas>
        </Grid>
        <Grid x:Name="selectionContainer" Background="#EDEDED" Height="940" Width="450" Canvas.Top="10" Margin="980,10,10,10" Visibility="Collapsed"/>
    </Grid>

</Page>
